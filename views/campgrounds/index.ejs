<% layout('layouts/boilerplate') %>
    <h1> All Campgrounds: </h1>
    <% for(let camp of camps) { %>
        <div class="card mb-3">
            <div class="row ">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%=camp.image%>">
                </div>
                <div class="col-md-8 align-content-center">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=camp.title %>
                        </h5>
                        <p class="card-text">
                            <%=camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=camp.location %>
                            </small>
                        </p>
                        <p class="card-text">
                            <a class="btn btn-primary" href="campgrounds/<%=camp._id %>">See More</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
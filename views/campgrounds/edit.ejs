<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">Edit A Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" name="location" id="location" value="<%=camp.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please choose a location.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="title" id="title" value="<%=camp.title %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please choose a title.
                </div>
            </div class="mb-3">
            <div class="mb-3">
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control" type="text" name="image" id="image" value="<%=camp.image %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please select an image URL.
                </div>
            </div class="mb-3">
            <label class="form-label" for="price">Price</label>
            <div class="input-group mb-3">
                <span class="input-group-text">$</span>
                <input type="number" class="form-control" name="price" id="price" min="0" aria-label="Amount (to the nearest dollar)" value="<%=camp.price %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please enter a valid price.
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" name="description" id="description" rows="4" required><%=camp.description %> </textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please add some description.
                </div>
            </div class="mb-3">
            <button class="btn btn-info">Edit A Campground</button>
            <a class="btn btn-primary" href="/campgrounds">All Capmgrounds</a>
            <div class="my-3">
                <a href="/campgrounds/<%=camp._id%>">Back To Campground</a>
            </div>
        </form>
    </div>
</div>

